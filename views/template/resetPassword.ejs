<%- include("template/header") %>
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-lg-7 text-center text-lg-start">
      <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">Reset your password</h1>
      <p class="col-lg-10 fs-4">Enter your new password below.</p>
    </div>
    <div class="col-md-10 mx-auto col-lg-5">
      <form action="/api/password/resetPassword" method="post" class="p-4 p-md-5 border rounded-3 bg-body-tertiary">
        <input type="hidden" name="token" value="<%= token %>">
        <div class="form-floating mb-3">
          <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="New Password">
          <label for="floatingPassword">New Password</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Reset Password</button>
      </form>
    </div>
  </div>
</div>
<%- include("template/footer") %>
