<%- include("template/header") %>

<div class="d-grid gap-2">
    <button type="button" id="runWordleBtn" class="btn btn-primary">
      Run Wordle
    </button>
</div>

<iframe id="wordleFrame" style="width: 100%; height: 600px; display: none;" frameborder="0"></iframe>

<script>
  document.getElementById('runWordleBtn').addEventListener('click', () => {
    const iframe = document.getElementById('wordleFrame');
    iframe.src = '/wordle/wordle.html';
    iframe.style.display = 'block';
  });
</script>

